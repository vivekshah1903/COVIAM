(function() {
    'use strict';

    angular.module('app.common').controller('EmployeeDataCtrl', employeeDataCtrl);

    employeeDataCtrl.$inject = ['$scope', '$uibModal', 'EmployeeDataService', '$timeout'];

    //Controller implementation
    function employeeDataCtrl($scope, $uibModal, EmployeeDataService, $timeout) {
        var vm = this;  
        vm.getEmployeeSummary = getEmployeeSummary;
        vm.uploadFile = uploadFile;   
        vm.canceluploadedFile = canceluploadedFile;
        vm.apisAlert = {
                toggle: false,
                message: "",
                type: "ERROR"
            }    
   getEmployeeSummary();
     function getEmployeeSummary() {
            return EmployeeDataService.getEmpSummaryData().then(function(summarydata) {
                    console.log(summarydata);
                vm.lastUpdate = summarydata.employees;
                vm.noemp = summarydata.employees.length;
                vm.employeeDashboard.options.data = summarydata.employees;
            }).finally(function() {

            });
        }
         function uploadFile(fileData) {
           
                            var obj = {
                                "fileName": fileData
                            }
                return EmployeeDataService.uploadDataFile(obj).then(function(data) {
                   
                    if (data.data.result == "SUCCESS") {
                        console.log("SUCCESS");
                        canceluploadedFile();
                                    //getEmployeeSummary();
                                    vm.apisAlert = {
                                        toggle: true,
                                        message: data.data.message || 'Internal Server Error',
                                        type: "SUCCESS"
                                    };
                                    $timeout(function() {
                                        vm.apisAlert.toggle = false;
                                    }, 5000);
                                }
                            });
                                   
            }
             function canceluploadedFile() {
            $scope.filename = false;
            vm.checkName = false;
        }

             vm.employeeDashboard = {
            options: {
                cache: false,
                //height: 600,
                striped: true,
                pagination: true,
                pageSize: 10,
                pageList: [5, 10, 25, 50, 100, 200],
                search: true,
                showColumns: false,
                showRefresh: false,
                showExport: false,
                minimumCountColumns: 2,
                clickToSelect: false,
                showToggle: false,
                toolbar: "#toolbar",
                maintainSelected: true,
                columns: [{
                        title: 'ACF2',
                        field: 'acf2Id',

                        align: 'center',
                        valign: 'middle',
                        sortable: true


                    }, {
                        title: 'Emp ID',
                        field: 'code',

                        align: 'center',
                        valign: 'middle',
                        sortable: true

                    }, {
                        title: 'Name',
                        field: 'name',

                        align: 'center',
                        valign: 'middle',
                        sortable: true,
                         "formatter": empWrapFormatter
                       

                    }, {
                        title: 'Designation',
                        field: 'businessTitle',

                        align: 'center',
                        valign: 'middle',
                        sortable: true

                    }, {
                        title: 'BU Dept',
                        field: 'dept',

                        align: 'center',
                        valign: 'middle',
                        sortable: true

                    },
                    {
                        title: 'Emp Status',
                        field: 'status',

                        align: 'center',
                        valign: 'middle',
                        sortable: true

                    }


                ]

            }
        };
         function empWrapFormatter(value, row, index) {
            return '<a class="pst-rel empdes link-txt">' + value +

                '<span class="tooltiptext">' + '<div class="half-part">' + '<span class="tooltip-txt">' + 'ACF2ID:' + '</span>' + row.acf2Id + '</div>' + '<div class="half-part">' + '<span class="tooltip-txt">' + 'Designation:' + '</span>' + row.businessTitle + '</div>'
                 + '<div class="half-part">' + '<span class="tooltip-txt">' + 'BU Dept:' + '</span>' + row.dept + '</div>' + '<div class="half-part">' + '<span class="tooltip-txt">' + 'Team:' + '</span>' + row.team + '</div>' + '<div class="half-part">' + '<span class="tooltip-txt">' + 'LOB Engagement:' + '</span>' + row.lobEngagement + '</div>' 
                 + '<div class="half-part">' + '<span class="tooltip-txt">' + 'FLM Name:' + '</span>' + row.firstLineManager + '</div>' +'<div class="half-part">' + '<span class="tooltip-txt">' + 'Workday Manager:'+ '</span>' + row.workdayManager + '</div>' + '<div class="half-part">' + '<span class="tooltip-txt">' + 'Employee Type:' + '</span>' + row.type + '</div>'
                  +'<div class="half-part">' + '<span class="tooltip-txt">' + 'Employee Status:'+ '</span>' + row.status + '</div>' + '<div class="half-part">' +'<span class="tooltip-txt">'+'Employee Code:'+'</span>'+ row.code + '</div>' + '<div class="half-part">' +'<span class="tooltip-txt">'+'Gender:'+'</span>'+ row.gender + '</div>'
                  + '<div class="half-part">' +'<span class="tooltip-txt">'+'DOB:'+'</span>'+ row.dob + '</div>'+ '<div class="half-part">' +'<span class="tooltip-txt">'+'Groups:'+'</span>'+ row.groups + '</div>' +  '<div class="half-part">' +'<span class="tooltip-txt">'+'Blood Group:'+'</span>'+ row.bloodGroup + '</div>'+  '<div class="half-part">' +'<span class="tooltip-txt">'+'Unit:'+'</span>'+ row.businessUnit + '</div>'
                  +'</span>' + '</a>';
        }

 }

})();
