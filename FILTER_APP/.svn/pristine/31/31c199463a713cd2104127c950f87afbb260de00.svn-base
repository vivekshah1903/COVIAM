<div class="row" >
    <div style="background-color: #EAAC1F;" class="col-md-12"><h2>Album</h2></div>
</div>

 <div class="row">
        
        <div class="col-lg-12">
            <h3 class="loginHead">Create Album
            <a class="pull-right in-block" href=""> < Back </a>
            </h3>      
        </div>
 </div>

 <div>
 <form name="album1">
 <div class="col-lg-12">
 <div class="row">
 			<div class="col-lg-4 m-t-15">
                    <input class="bottomLine air-input" type="text" placeholder="Enter album name">
            </div>

          <div class="col-lg-4 m-t-15">
                      <div  class="col-lg-2" ng-class="{'has-error':album1.validFrom.$touched && album1.validFrom.$invalid}">
                
                    <div class="Billing pst-rel">
                        <input type="text" class="date-input m-t-15" onkeydown="return false" required ng-model="albums.validFrom" name="validFrom" is-open="albums.from" uib-datepicker-popup="dd-MM-yyyy" datepicker-options="albums.options" onkeydown="return false"  ng-change="albums.validFromCheckGrid(albums.validFrom,albums.validTo)"><span class="input-group-btn">

                       <button type="button" class="btn btn-default calendr-btn pull-right" ng-click="albums.dashDatePicker(albums.from,'from')">
                       <i class="glyphicon glyphicon-calendar"></i>
                       </button>
                       </span>
                        <div ng-show="album1.validFrom.$touched" class="has-error"> <span class="help-block" ng-show="album1.validFrom.$error.required"> Date is required.</span>
                        </div>
                    </div>
                </div>
             
          </div>
         
          <div class="col-lg-2 m-t-15">
                     <select class="form-control">
                        <option>Select Location</option>
                        <option>Indore</option>
                        <option>Canada</option>
                     </select>
          </div>
            
</div>

 <div class="row">
 			<div class="col-lg-8 m-t-15">
                    <textarea rows="4" cols="50" placeholder="Enter album description"></textarea>
            </div>

         
          <div class="col-lg-2 m-t-15">
                     <select class="form-control">
                        <option>Select associated event</option>
                        <option>JOSH</option>
                        <option>HSW</option>
                        <option>CSR</option>
                     </select>
          </div>
            
</div>


<div class="row">
        <div class="col-sm-8 m-t-15">
        	<form class="form-horizontal" role="form">
