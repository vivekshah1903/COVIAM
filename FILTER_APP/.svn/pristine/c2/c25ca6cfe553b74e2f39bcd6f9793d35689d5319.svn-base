angular.module('app.common',[]);
angular.module('app.login',[]);
angular.module('app.events',[]);
angular.module('app',['ui.router','app.common','app.login','app.events','ui.bootstrap','ngFileUpload', 'ui.grid', 'ui.grid.pagination', 'ui.grid.selection', 'ui.grid.exporter', 'ui.grid.autoResize',
     'ui.grid.expandable','ui.grid.pinning', 'ui.grid.resizeColumns', 'ui.grid.edit', 'ui.grid.rowEdit']).config(['$urlRouterProvider', '$stateProvider', function($urlRouterProvider, $stateProvider) {
    $stateProvider.state('app', {
        url: '/home'   
    });
     $urlRouterProvider.otherwise('/home');

   
}]).controller('MainController', ['$scope', '$rootScope', '$location' ,'$uibModal','sessionService','TransportDataService', function($scope,$rootScope,$location,$uibModal,sessionService,TransportDataService) {
      $scope.loginUser=sessionService.getUserDetails('USER');
     $location.path("/home");

        $scope.loginRegisterUser=function() {

            var UserCreateModalInstance = $uibModal.open({
                animation: true,
                templateUrl: 'UX/app/login/partials/login.html',
                controller: 'LoginCtrl as login',
                backdrop: 'static',
                resolve: {
                    items: function() {
                        return;
                    }
                }
            });

            UserCreateModalInstance.result.then(function(userObject) {
                  $scope.loginUser = userObject;
                  sessionService.setUserDetails(userObject)
                  
                  

            }, function() {

            });

        
        }
        $rootScope.validateForm = function(forms) {
        var flag = true;
        angular.forEach(forms, function(form) {
            if (form.$invalid) {
                flag = false;
                angular.forEach(form.$error, function(field) {
                    angular.forEach(field, function(errorField) {
                        errorField.$setTouched();
                    })
                });
            }
        })
        return flag;
    }
         $scope.logoutUser=function(){
        
          sessionService.clearSession();
           $scope.loginUser="";
            $location.path("/home");
         }
		 
		  $scope.Upload=function() {

            var UserCreateModalInstance = $uibModal.open({
                animation: true,
                templateUrl: 'UX/app/transportData/partials/transportData.html',
                controller: 'TransportDataCtrl as transportData',
                backdrop: 'static',
                resolve: {
                    items: function() {
                        return;
                    }
                }
            });

            UserCreateModalInstance.result.then(function(fileObject) {
                  console.log("fileObject",fileObject);
                 TransportDataService.transportData(fileObject);
                  
            }, function() {

            });        
        }

}]);